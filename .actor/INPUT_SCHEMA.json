{
    "title": "Greenhouse Job Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "urls": {
            "title": "URLs",
            "type": "array",
            "description": "One or more Greenhouse job board URLs to scrape. You can include department filters in the URL (e.g., https://job-boards.greenhouse.io/webflow?departments[]=59798). Optionally specify maxJobs per URL to limit results per company.",
            "editor": "requestListSources",
            "placeholderKey": "url",
            "placeholderValue": "https://job-boards.greenhouse.io/",
            "patternKey": "url",
            "patternValue": "https://job-boards\\.greenhouse\\.io/.+",
            "prefill": [
                { "url": "https://job-boards.greenhouse.io/webflow" }
            ]
        },
        "proxy": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Proxy settings for the crawler",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["urls"]
}
