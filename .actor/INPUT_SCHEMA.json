{
    "title": "Greenhouse Job Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "urls": {
            "title": "Job Board URLs",
            "type": "array",
            "description": "Greenhouse job board URLs to scrape. To filter by department or limit jobs, switch to JSON tab and add: {\"url\": \"...\", \"departments\": [59798], \"maxJobs\": 20}. Find department IDs by clicking a department filter on the job board and copying the number from the URL (e.g., ?departments[]=59798).",
            "editor": "requestListSources",
            "placeholderKey": "url",
            "placeholderValue": "https://job-boards.greenhouse.io/",
            "patternKey": "url",
            "patternValue": "https://job-boards\\.greenhouse\\.io/.+",
            "prefill": [
                { 
                    "url": "https://job-boards.greenhouse.io/webflow"
                }
            ]
        },
        "proxy": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Proxy settings for the crawler",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["urls"]
}
