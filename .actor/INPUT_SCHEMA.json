{
    "title": "Greenhouse Job Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "urls": {
            "title": "Job Boards to Scrape",
            "type": "array",
            "description": "One or more Greenhouse job board URLs to scrape. You can include department filters in the URL (e.g., https://job-boards.greenhouse.io/webflow?departments[]=59798).",
            "prefill": [
                { 
                    "url": "https://job-boards.greenhouse.io/webflow",
                    "maxJobs": null
                }
            ],
            "items": {
                "type": "object",
                "title": "Job Board",
                "properties": {
                    "url": {
                        "type": "string",
                        "title": "URL",
                        "description": "Greenhouse job board URL",
                        "editor": "textfield",
                        "pattern": "^https://job-boards\\.greenhouse\\.io/.+",
                        "example": "https://job-boards.greenhouse.io/webflow"
                    },
                    "maxJobs": {
                        "type": "integer",
                        "title": "Max Jobs",
                        "description": "Maximum number of jobs to scrape from this board (leave empty or set to 0 for unlimited)",
                        "editor": "number",
                        "minimum": 0,
                        "nullable": true,
                        "example": 20
                    }
                },
                "required": ["url"]
            }
        },
        "proxy": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Proxy settings for the crawler",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["urls"]
}
