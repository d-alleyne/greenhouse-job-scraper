{
    "title": "Greenhouse Job Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "urls": {
            "title": "Job Board URLs",
            "type": "array",
            "description": "List of job boards to scrape. Each entry supports: url (required), departments (optional array of IDs), maxJobs (optional limit per board)",
            "editor": "json",
            "example": [
                {
                    "url": "https://job-boards.greenhouse.io/webflow",
                    "departments": [59798, 59799],
                    "maxJobs": 20
                }
            ],
            "prefill": [
                { 
                    "url": "https://job-boards.greenhouse.io/webflow"
                }
            ]
        },
        "proxy": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Proxy settings for the crawler",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["urls"]
}
