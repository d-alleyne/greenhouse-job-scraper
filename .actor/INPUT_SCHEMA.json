{
    "title": "Greenhouse Job Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "urls": {
            "title": "Job Board URLs",
            "type": "array",
            "description": "Greenhouse job board URLs to scrape. Add simple URLs or configure per-board filters (departments, maxJobs, daysBack) in the JSON tab.",
            "editor": "requestListSources",
            "placeholderKey": "url",
            "placeholderValue": "https://job-boards.greenhouse.io/automatticcareers",
            "patternKey": "url",
            "patternValue": "https://job-boards\\.greenhouse\\.io/.+",
            "prefill": [
                { 
                    "url": "https://job-boards.greenhouse.io/automatticcareers"
                }
            ]
        },
        "proxy": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Proxy settings for the crawler.",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["urls"]
}
