{
    "title": "Greenhouse Job Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "urls": {
            "title": "Job Board URLs",
            "type": "array",
            "description": "Greenhouse job board URLs to scrape. Click 'Advanced' or switch to JSON mode to add maxJobs per URL. Example: {\"url\": \"https://job-boards.greenhouse.io/webflow\", \"maxJobs\": 20}",
            "editor": "requestListSources",
            "placeholderKey": "url",
            "placeholderValue": "https://job-boards.greenhouse.io/",
            "patternKey": "url",
            "patternValue": "https://job-boards\\.greenhouse\\.io/.+",
            "prefill": [
                { 
                    "url": "https://job-boards.greenhouse.io/webflow"
                }
            ]
        },
        "proxy": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Proxy settings for the crawler",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["urls"]
}
